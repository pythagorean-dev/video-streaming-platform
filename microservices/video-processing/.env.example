# Video Processing Service Environment Variables

# Server Configuration
PORT=3003
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL="file:../../../prisma/dev.db"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=video-streaming-platform

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Processing Configuration
MAX_CONCURRENT_JOBS=3
MAX_FILE_SIZE=10737418240
SUPPORTED_FORMATS=mp4,mov,avi,webm,mkv

# Upload Configuration
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
TEMP_DIR=./temp

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_REDIS_DB=1

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# CDN Configuration
CDN_BASE_URL=https://cdn.yoursite.com
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# Webhook Configuration
WEBHOOK_URL=http://localhost:3000/api/webhooks/processing
WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=60000